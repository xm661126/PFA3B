<!--index.wxml-->

<view class="container">
  <view class="xinwenlan">
    <image class="xinwenlianbo" src="/images/xinwenlianbo.png" mode="scaleToFill">
    </image>
    <view class="xinwenlan2">
      <view class="xinwenlan3" wx:for="{{citylist}}">
        <image class="biaozhi1" src="/images/biaozhi1.png"></image>
        <view class="biaoti2" bindtap="getInformation" id='{{item}}' data-index='{{index}}' data-click='yes'>{{item}}</view>
        <!-- cityname=cityMap({{item}}) -->
      </view>

    </view>
  </view>
  <scroll-view scroll-y class="zhongjiantiao">
    <view class='dongtainews' id="{{item.id}}" bindtap="onTapDayNews" wx:for="{{newsResult}}">
      <view class='originxiaobiaoti1'> {{item.title}}</view>
      <image class="originimage1"  src="{{item.firstImage}} "></image>

      <view class="originsource ">{{item.source}}"    "{{item.date}}</view>
    </view>
  </scroll-view>
</view>